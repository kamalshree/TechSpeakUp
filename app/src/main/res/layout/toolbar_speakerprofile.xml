<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/speaker_profile_page_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/speaker_profile_page_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:contentDescription="@string/details_page_toolbar_logo_text"
            android:src="@drawable/ic_left" />


        <TextView
            android:id="@+id/speaker_profile_page_toolbar_settings"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_weight="3"
            android:text="@string/speaker_profile_profiletext"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/speaker_profile_toolbar_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:contentDescription="@string/details_page_toolbar_logo_text"
            android:src="@drawable/toolbar_logo" />
    </LinearLayout>
</android.support.v7.widget.Toolbar>
