<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/viewcolor"
        android:orientation="vertical"
        tools:context=".ui.followers.FollowersActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradientbackground">


            <!-- ToolBar -->
            <include
                android:id="@+id/toolbar_speakerprofile"
                layout="@layout/toolbar_speakerprofile" />


            <android.support.v7.widget.CardView
                android:id="@+id/speaker_profile_cardviewone"
                android:layout_width="@dimen/navigation_drawer_menu_height"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar_speakerprofile"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin_larges"
                android:layout_marginRight="@dimen/margin_larges"
                android:visibility="visible"
                app:cardBackgroundColor="@color/colorText">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                   >

                    <TextView
                        android:id="@+id/et_notification_send_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/et_notification_send_msg"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="33dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text="@string/et_notification_send_name"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_notification_send_msg"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="126dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/buttonborder"
                        android:ems="10"
                        android:hint="@string/et_notification_send_msg"
                        android:inputType="textMultiLine" />

                    <Button
                        android:id="@+id/et_notification_send_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="48dp"
                        android:textColor="@color/colorAccent"
                        android:background="@drawable/buttonborder"
                        android:text="@string/et_notification_send_button" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <!-- No Internet Connection layout-->
            <include
                android:id="@+id/layout_internet"
                android:visibility="invisible"
                layout="@layout/activity_no_internet"/>

        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>