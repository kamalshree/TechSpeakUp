<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/viewcolor"
        android:orientation="vertical"
        tools:context=".ui.speakerprofile.SpeakerProfileActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/speaker_profile_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/speaker_profile_image_width"
                android:background="@drawable/gradientbackground"
                android:orientation="vertical">

                <!-- ToolBar -->
               <include
                   layout="@layout/toolbar_speakerprofile"/>

                <ImageView
                    android:id="@+id/speaker_profile_iv"
                    android:layout_width="@dimen/speaker_profile_width"
                    android:layout_height="@dimen/speaker_profile_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_x_large"
                    android:contentDescription="@string/speaker_profile_map_image"
                    android:src="@drawable/ic_user" />

                <TextView
                    android:id="@+id/speaker_profile_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="@string/speaker_profile_wiliam_snoe"
                    android:textColor="#fff"
                    android:textSize="@dimen/speaker_profile_font_24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/speaker_profile_tv_designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="@string/speaker_profile_android_developer"
                    android:textColor="#fff"
                    android:textSize="@dimen/speaker_profile_font_18sp" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/speaker_profile_cardviewone"
                android:layout_width="@dimen/navigation_drawer_menu_height"
                android:layout_height="@dimen/box_large"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin_larges"
                android:layout_marginRight="@dimen/margin_larges"
                android:layout_marginTop="@dimen/speaker_profile_margin_top"
                app:cardBackgroundColor="@color/colorText">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/speaker_profile_tv_event"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/speaker_profile_events"
                            android:textSize="@dimen/font_20sp" />

                        <TextView
                            android:id="@+id/speaker_profile_tv_event_val"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/padding_10"
                            android:text="@string/speaker_profile_events_val"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/speaker_profile_tv_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/speaker_profile_rate"
                            android:textSize="@dimen/font_20sp" />

                        <TextView
                            android:id="@+id/speaker_profile_tv_rate_val"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/padding_10"
                            android:text="@string/speaker_profile_rate_val"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/speaker_profile_tv_followers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/speaker_profile_followers"
                            android:textSize="@dimen/font_20sp" />

                        <TextView
                            android:id="@+id/speaker_profile_tv_followers_val"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/padding_10"
                            android:text="@string/speaker_profile_followers_val"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/speaker_profile_cardviewtwo"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/speaker_profile_cardviewone"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/margin_medium"
                app:cardBackgroundColor="@color/colorText">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_10"
                        android:weightSum="3">


                        <ImageView
                            android:id="@+id/speaker_profile_iv_map"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/speaker_profile_map_image"
                            android:src="@drawable/ic_map" />

                        <TextView
                            android:id="@+id/speaker_profile_tv_map_val"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:paddingLeft="@dimen/padding_20"
                            android:paddingRight="@dimen/padding_20"
                            android:paddingStart="@dimen/padding_20"
                            android:text="@string/speaker_profile_peru"
                            android:textSize="@dimen/font_20sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_10"
                        android:weightSum="3">


                        <ImageView
                            android:id="@+id/iv_twitter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/speaker_profile_twiiter_image"
                            android:src="@drawable/ic_twitter" />

                        <TextView
                            android:id="@+id/tv_twitter_val"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:paddingLeft="@dimen/padding_20"
                            android:paddingRight="@dimen/padding_20"
                            android:paddingStart="@dimen/padding_20"
                            android:text="@string/details_page_image_twitter_text"
                            android:textSize="@dimen/font_20sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_10"
                        android:weightSum="3">


                        <ImageView
                            android:id="@+id/iv_linkedin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/speaker_profile_link_map"
                            android:src="@drawable/ic_linkedin" />

                        <TextView
                            android:id="@+id/iv_linkedin_val"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:paddingLeft="@dimen/padding_20"
                            android:paddingRight="@dimen/padding_20"
                            android:paddingStart="@dimen/padding_20"
                            android:text="@string/speaker_profile_website_text"
                            android:textSize="@dimen/font_20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_10"
                        android:weightSum="3">


                        <ImageView
                            android:id="@+id/iv_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/speaker_profile_link_map"
                            android:src="@drawable/ic_website" />

                        <TextView
                            android:id="@+id/iv_link_val"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:paddingLeft="@dimen/padding_20"
                            android:paddingRight="@dimen/padding_20"
                            android:paddingStart="@dimen/padding_20"
                            android:text="@string/speaker_profile_website_text"
                            android:textSize="@dimen/font_20sp" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/speaker_profile_cardthree"
                android:layout_width="@dimen/speaker_profile_card_width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/speaker_profile_cardviewtwo"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/speaker_profile_margin_20"
                android:layout_marginRight="@dimen/speaker_profile_margin_20"
                android:layout_marginTop="@dimen/margin_medium"
                app:cardBackgroundColor="@color/colorText">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_10">

                    <TextView
                        android:id="@+id/tv_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        android:gravity="center_horizontal"
                        android:text="@string/speaker_profile_about_me"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_about_val"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/padding_5"
                        android:text="@string/speaker_profile_about_me_text"
                        android:textSize="@dimen/font_20sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>