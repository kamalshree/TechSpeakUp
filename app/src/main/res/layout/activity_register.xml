<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/sigin_image_logo"
        android:layout_width="@dimen/box_x_large"
        android:layout_height="@dimen/box_x_large"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_xx_large"
        android:contentDescription="@string/app_name"
        android:src="@drawable/signin_logo" />

    <TextView
        android:id="@+id/signin_text_logotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sigin_image_logo"
        android:layout_alignStart="@+id/sigin_image_logo"
        android:layout_centerVertical="true"
        android:fontFamily="@font/lato_bold"
        android:text="@string/signin_text_logo"
        android:textColor="#90ffffff"
        android:textSize="@dimen/register_logo_text_size" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/pb_loading"
        android:layout_width="@dimen/loading_dots_width"
        android:layout_height="@dimen/loading_dots_height"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading.json"
        app:lottie_loop="true" />

    <Button
        android:id="@+id/signin_btn_speaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signin_btn_user"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/margin_x_large"
        android:layout_marginEnd="@dimen/margin_x_large"
        android:layout_marginStart="@dimen/margin_x_large"
        android:fontFamily="@font/lato_bold"
        android:text="@string/register_btn_speaker"
        android:textColor="@color/colorTextOrange" />

    <Button
        android:id="@+id/signin_btn_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/register_btn_user"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/colorTextOrange"
        android:layout_marginBottom="@dimen/margin_x_large"
        android:layout_marginEnd="@dimen/margin_x_large"
        android:layout_marginStart="@dimen/margin_x_large">

    </Button>


</RelativeLayout>
