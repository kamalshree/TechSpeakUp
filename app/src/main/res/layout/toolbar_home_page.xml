<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/details_page_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">
    <ImageView
        android:id="@+id/details_page_toolbar_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/details_page_toolbar_logo_text"
        android:src="@drawable/ic_menu_icon"
        android:layout_weight="1"/>


    <TextView
        android:id="@+id/details_page_toolbar_settings"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textColor="@android:color/white"
        android:layout_weight="3"/>

    <ImageView
        android:id="@+id/details_page_toolbar_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/details_page_toolbar_logo_text"
        android:src="@drawable/toolbar_logo"
        android:layout_weight="1"/>
    </LinearLayout>
</android.support.v7.widget.Toolbar>
