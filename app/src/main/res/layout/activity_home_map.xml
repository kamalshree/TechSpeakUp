<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar_speakerprofile"
            layout="@layout/toolbar_speakerprofile" />

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            tools:context="codesqills.org.techspeakup.ui.userdashboard.UserDashboardActivity" />
    </RelativeLayout>
    <!-- No Internet Connection layout -->
    <include
        android:id="@+id/layout_internet"
        layout="@layout/activity_no_internet"
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>