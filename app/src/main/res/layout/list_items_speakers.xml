<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_15"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/buttonborder"
        android:padding="@dimen/padding_10">

        <TextView
            android:id="@+id/tv_speaker_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:text="@string/tv_speaker_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_24sp" />

        <TextView
            android:id="@+id/tv_speaker_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_speaker_name"
            android:padding="@dimen/padding_10"
            android:text="@string/tv_speaker_job"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_24sp" />

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_speaker_job"
            android:layout_marginEnd="@dimen/margin_x_large"
            android:layout_toStartOf="@+id/iv_follow"
            android:contentDescription="@string/star_details"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/iv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_speaker_job"
            android:layout_below="@+id/tv_speaker_job"
            android:layout_marginEnd="@dimen/margin_larges"
            android:contentDescription="@string/follow_details"
            android:src="@drawable/ic_follow" />


    </RelativeLayout>


</LinearLayout>