<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/buttonborder"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_speaker_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/tv_speaker_name"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_speaker_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_speaker_name"
            android:padding="10dp"
            android:text="@string/tv_speaker_job"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_speaker_job"
            android:layout_marginEnd="38dp"
            android:layout_toStartOf="@+id/iv_follow"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/iv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_speaker_job"
            android:layout_below="@+id/tv_speaker_job"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_follow"
        />


    </RelativeLayout>



</LinearLayout>