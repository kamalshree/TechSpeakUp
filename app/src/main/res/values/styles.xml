<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/background_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>


    </style>

    <style name="DetailsActivityButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="ListSeparatorText" parent="android:Widget.TextView">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="next_button" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#89b345</item>
        <item name="colorButtonNormal">#af1709</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="introscreen_header">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#F4AC3B</item>
    </style>

    <style name="introscreen_subheader">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#F4AC3B</item>
    </style>

    <style name="sign_in">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
